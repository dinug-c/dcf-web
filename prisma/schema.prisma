generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model lkti {
  id              Int    @id @default(autoincrement())
  judul           String
  id_ketua        Int
  nama_tim        String
  nama_anggota1   String
  nama_anggota2   String
  email_anggota1  String
  email_anggota2  String
  asal_instansi   String
  link_abstrak    String
  link_fullpaper  String
  nilai_abstrak   Int
  nilai_fullpaper Int
  bukti_pembayaran  String
  status          String
}

model kompetisi {
  id            Int    @id @default(autoincrement())
  nama          String
  email         String @unique
  asal_instansi String
  nilai_ujicoba Int
  nilai_ujian   Int
  bukti_pembayaran  String
  status  String
}

model semnas {
  id            Int    @id @default(autoincrement())
  nama          String
  email         String @unique
  asal_instansi String
  no_hp         String
}

model admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model User {
  id               Int      @id @default(autoincrement())
  id_lomba         Int
  email            String   @unique
  no_hp            String  
  nama             String
  asal_sekolah     String
  password         String
  ktm              String
  reset_token      String
  reset_token_date DateTime
}
